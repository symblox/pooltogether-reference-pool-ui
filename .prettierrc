{
  "overrides": [
    {
      "files": ["*.*"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "explicitTypes": "always",
        "trailingComma": "all",
        "arrowParens": "avoid",
        "semi": false
      }
    }
  ]
}
